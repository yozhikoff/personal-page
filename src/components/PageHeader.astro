---
export interface Props {
	title: string;
	subtitle?: string;
	description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<header class="mb-12">
	<h1 class="text-4xl font-bold mb-6 text-gray-900">{title}</h1>
	{subtitle && (
		<p class="text-xl text-gray-600 leading-relaxed mb-2">{subtitle}</p>
	)}
	{description && (
		<p class="text-lg text-gray-500 leading-relaxed italic">{description}</p>
	)}
</header>